<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="14dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="52dp"
            android:fontFamily="@font/ys_display_font"
            android:textStyle="bold"
            android:text="@string/settings"
            android:textColor="@color/black"
            android:textSize="22sp"/>

        <ImageButton
            android:id="@+id/arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@null"
            app:srcCompat="@drawable/arrow_back"
            android:layout_marginLeft="16dp"/>
    </FrameLayout>

    <Switch
        android:id="@+id/themeSwitcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:fontFamily="@font/ys_display_font"
        android:text="@string/black_theme"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:letterSpacing="0"
        />

    <Button
        android:id="@+id/share_button"
        style="@style/daylight_setting_button"
        android:drawableEnd="@drawable/share"
        android:text="@string/app_share"
        />

    <Button
        android:id="@+id/help_button"
        style="@style/daylight_setting_button"
        android:drawableEnd="@drawable/support"
        android:text="@string/help" />

    <Button
        android:id="@+id/user_agreement"
        style="@style/daylight_setting_button"
        android:drawableEnd="@drawable/arrow_forward"
        android:text="@string/settings" />

</LinearLayout>

