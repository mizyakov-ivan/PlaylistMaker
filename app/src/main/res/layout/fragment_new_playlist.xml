<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentNewPlaylist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorSecondary"
    android:theme="@style/Theme.PlaylistMaker"
    tools:context="com.practicum.playlistmaker.newplaylist.ui.fragment.NewPlaylistFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/constraintGuide_16"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/constraintGuide_16"/>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarSetting"
        style="@style/panelHeaderToolbar"
        app:title="Новый плейлист"
        android:background="?attr/colorSecondary"
        app:navigationIcon="@drawable/arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cover_playlist_cardview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_8dp"
        android:layout_marginEnd="@dimen/_8dp"
        app:cardBackgroundColor="?attr/colorSecondary"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toTopOf="@id/name_playlist"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/right_guideline"
        android:layout_gravity="center_horizontal"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/toolbarSetting"
        android:layout_marginTop="@dimen/_24dp"
        app:cardPreventCornerOverlap="false">

        <ImageView
            android:id="@+id/cover_playlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/artwork"
            android:src="@drawable/placeholder_cover_playlist"
            android:background="@drawable/frame_dotted_rectangle"
            android:scaleType="centerCrop"
            app:layout_constrainedWidth="true"
            app:layout_constrainedHeight="true"/>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/name_playlist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/left_guideline"
        app:layout_constraintEnd_toStartOf="@id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/cover_playlist_cardview"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginTop="32dp"
        android:hint="@string/name_playlist_newplaylist"
        app:hintTextColor="@color/text_not"
        app:boxStrokeColor="@color/text_not_box_stroke"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/text_name_playlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:fontFamily="@font/ys_display_medium"
            android:textSize="@dimen/t_size_16"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/description_playlist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/left_guideline"
        app:layout_constraintEnd_toStartOf="@id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/name_playlist"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="@dimen/_16dp"
        android:layout_marginBottom="@dimen/_16dp"
        android:hint="@string/description_playlist_newplaylist"
        app:layout_constraintBottom_toTopOf="@id/button_create_playlist"
        app:hintTextColor="@color/text_not"
        app:boxStrokeColor="@color/text_not_box_stroke"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/text_description_playlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:fontFamily="@font/ys_display_medium"
            android:textSize="@dimen/t_size_16"/>
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_create_playlist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintEnd_toEndOf="@id/right_guideline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginBottom="32dp"
        android:inputType="textCapSentences"
        android:text="@string/button_create"
        android:textColor="@color/white"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="@dimen/t_size_16"
        android:enabled="false"
        android:padding="@dimen/padding_text"
        android:background="@drawable/button"/>
</androidx.constraintlayout.widget.ConstraintLayout>